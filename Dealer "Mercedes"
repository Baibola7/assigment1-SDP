public class MercedesDealership {
    private static MercedesDealership instance;

    private MercedesDealership() {
        * Private constructor to prevent instantiation
    }

    public static MercedesDealership getInstance() {
        if (instance == null) {
            instance = new MercedesDealership();
        }
        return instance;
    }

    public void sellCar(String model) {
        * Logic for selling a Mercedes car
        System.out.println("Sold a " + model + " Mercedes. ");
    }
}

